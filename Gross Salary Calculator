#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    int basic;
    float HRA,DA,GROSS;
    scanf("%d",&basic);
    if(basic<=10000){
        HRA=(20.0/100.0)*basic;
        DA=(30.0/100.0)*basic;
        GROSS=basic+HRA+DA;
        printf("%.2f\n",GROSS);
        
    }
        if(basic>10000&&basic<=20000){
        HRA=(25.0/100.0)*basic;
        DA=(40.0/100.0)*basic;
        GROSS=basic+HRA+DA;
        printf("%.2f\n",GROSS);
        
    }
        if(basic>20000){
        HRA=(30.0/100.0)*basic;
        DA=(50.0/100.0)*basic;
        GROSS=basic+HRA+DA;
        printf("%.2f\n",GROSS);
        
    }

    return 0;
}
